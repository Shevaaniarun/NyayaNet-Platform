{
  "name": "nyayanet-backend",
  "version": "1.0.0",
  "description": "NyayaNet - Legal Professional Platform Backend",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsup src/server.ts --out-dir dist",
    "db:setup": "node scripts/setup-db.js",
    "db:seed": "node scripts/seed-data.js",
    "db:reset": "npm run db:setup && npm run db:seed"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.7",
    "tsup": "^7.2.0",
    "tsx": "^4.6.1",
    "typescript": "^5.3.3"
  }
}